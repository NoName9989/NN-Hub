local RightLayout = Instance.new("UIListLayout", RightPanel)
RightLayout.Padding = UDim.new(0, 6)
RightLayout.SortOrder = Enum.SortOrder.LayoutOrder
local Tabs = {} -- bảng lưu tab và nội dung

local function addTab(tabName)
	-- Tạo nút tab bên trái
	local tabButton = Instance.new("TextButton")
	tabButton.Name = "TabButton_" .. tabName
	tabButton.Text = tabName
        tabButton.Size = UDim2.new(1, -10, 0, 40)
        tabButton.BackgroundColor3 = Color3.fromRGB(210, 210, 210)
        tabButton.TextColor3 = Color3.fromRGB(30, 30, 30)
        tabButton.Font = Enum.Font.Gotham
        tabButton.TextSize = 14 -- Vẫn nên giữ 1 size mặc định
        tabButton.TextScaled = true
        tabButton.TextWrapped = true
        tabButton.Parent = LeftPanel
-- Viền xung quanh tab (ẩn ban đầu)
        local stroke = Instance.new("UIStroke")
        stroke.Name = "HighlightStroke"
        stroke.Color = Color3.fromRGB(120, 120, 255) -- Màu viền
        stroke.Thickness = 2
        stroke.Transparency = 1 -- Ẩn ban đầu
        stroke.Parent = tabButton
	Instance.new("UICorner", tabButton).CornerRadius = UDim.new(0, 6)

	-- Tạo frame nội dung bên phải
	local contentFrame = Instance.new("Frame")
	contentFrame.Name = "Content_" .. tabName
	contentFrame.Size = UDim2.new(1, -10, 0, 300)
	contentFrame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
	contentFrame.BackgroundTransparency = 1
	contentFrame.BorderSizePixel = 0
	contentFrame.Visible = false
	contentFrame.Parent = RightPanel

	local contentLabel = Instance.new("TextLabel")
	contentLabel.Size = UDim2.new(1, 0, 1, 0)
	contentLabel.Text = "Nội dung của tab: " .. tabName
	contentLabel.Font = Enum.Font.Gotham
	contentLabel.TextSize = 16
	contentLabel.TextColor3 = Color3.fromRGB(50, 50, 50)
	contentLabel.BackgroundTransparency = 1
	contentLabel.Parent = contentFrame

	-- Lưu tab vào bảng
	Tabs[tabName] = {
		Button = tabButton,
		Content = contentFrame
	}

	tabButton.MouseButton1Click:Connect(function()
	for name, t in pairs(Tabs) do
		t.Content.Visible = (name == tabName)

		-- Reset màu và ẩn viền của các tab khác
		t.Button.BackgroundColor3 = Color3.fromRGB(210, 210, 210)
		local stroke = t.Button:FindFirstChild("HighlightStroke")
		if stroke then
			stroke.Transparency = 1
		end
	end

	-- Làm nổi bật tab đang chọn
	tabButton.BackgroundColor3 = Color3.fromRGB(180, 180, 255)
	local selectedStroke = tabButton:FindFirstChild("HighlightStroke")
	if selectedStroke then
		selectedStroke.Transparency = 0
	end
end)

