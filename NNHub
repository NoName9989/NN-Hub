-- T·∫°o thanh l·ª±a ch·ªçn (Dropdown)
local function createDropdown(parent, options, defaultOption, size, position)
    -- T·∫°o Button ch√≠nh cho Dropdown
    local button = Instance.new("TextButton")
    button.Text = defaultOption
    button.Size = size or UDim2.new(0, 200, 0, 40)
    button.Position = position or UDim2.new(0, 0, 0, 0)
    button.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
    button.Font = Enum.Font.Gotham
    button.TextSize = 14
    button.TextColor3 = Color3.fromRGB(0, 0, 0)
    button.Parent = parent

    -- T·∫°o Frame ch·ª©a c√°c l·ª±a ch·ªçn (Dropdown)
    local dropDownFrame = Instance.new("Frame")
    dropDownFrame.Size = UDim2.new(0, 200, 0, 0)
    dropDownFrame.Position = UDim2.new(0, 0, 1, 0)
    dropDownFrame.BackgroundColor3 = Color3.fromRGB(240, 240, 240)
    dropDownFrame.Visible = false
    dropDownFrame.Parent = button

    -- Th√™m c√°c l·ª±a ch·ªçn v√†o Dropdown
    for i, option in ipairs(options) do
        local optionButton = Instance.new("TextButton")
        optionButton.Text = option
        optionButton.Size = UDim2.new(1, 0, 0, 40)
        optionButton.BackgroundColor3 = Color3.fromRGB(220, 220, 220)
        optionButton.TextColor3 = Color3.fromRGB(0, 0, 0)
        optionButton.Parent = dropDownFrame

        -- S·ª± ki·ªán ch·ªçn l·ª±a
        optionButton.MouseButton1Click:Connect(function()
            button.Text = option
            dropDownFrame.Visible = false
        end)
    end

-- T·∫°o n√∫t b·∫≠t/t·∫Øt
local function createToggleButton(parent, defaultState, size, position)
    -- T·∫°o n√∫t
    local toggleButton = Instance.new("TextButton")
    toggleButton.Size = size or UDim2.new(0, 200, 0, 40)
    toggleButton.Position = position or UDim2.new(0, 0, 0, 0)
    toggleButton.Text = defaultState and "ON" or "OFF"
    toggleButton.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
    toggleButton.Font = Enum.Font.Gotham
    toggleButton.TextSize = 14
    toggleButton.TextColor3 = Color3.fromRGB(0, 0, 0)
    toggleButton.Parent = parent

    -- Tr·∫°ng th√°i b·∫≠t/t·∫Øt
    local isActive = defaultState

    -- S·ª± ki·ªán khi nh·∫•n v√†o n√∫t
    toggleButton.MouseButton1Click:Connect(function()
        isActive = not isActive
        toggleButton.Text = isActive and "ON" or "OFF"
    end)

    -- Tr·∫£ v·ªÅ tr·∫°ng th√°i
    return function()
        return isActive
    end
end

    -- T·∫°o s·ª± ki·ªán khi nh·∫•n v√†o button ch√≠nh
    button.MouseButton1Click:Connect(function()
        dropDownFrame.Visible = not dropDownFrame.Visible
    end)
end

local function createSlider(parent, minValue, maxValue, defaultValue, size, position)
    -- T·∫°o Frame cho Slider
    local slider = Instance.new("Frame")
    slider.Size = size or UDim2.new(0, 300, 0, 20)
    slider.Position = position or UDim2.new(0, 0, 0, 0)
    slider.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
    slider.Parent = parent

    -- T·∫°o thanh tr∆∞·ª£t
    local sliderBar = Instance.new("Frame")
    sliderBar.Size = UDim2.new((defaultValue - minValue) / (maxValue - minValue), 0, 1, 0)
    sliderBar.Position = UDim2.new(0, 0, 0, 0)
    sliderBar.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    sliderBar.Parent = slider

    -- T·∫°o n√∫t tr∆∞·ª£t
    local sliderButton = Instance.new("TextButton")
    sliderButton.Size = UDim2.new(0, 20, 0, 20)
    sliderButton.Position = UDim2.new((defaultValue - minValue) / (maxValue - minValue), 0, 0, 0)
    sliderButton.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    sliderButton.Text = ""
    sliderButton.Parent = slider

    -- X·ª≠ l√Ω s·ª± ki·ªán di chuy·ªÉn n√∫t tr∆∞·ª£t
    local dragging = false
    local startPos = nil
    sliderButton.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            startPos = input.Position.X
        end
    end)

    sliderButton.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)

    game:GetService("UserInputService").InputChanged:Connect(function(input)
        if dragging then
            local delta = input.Position.X - startPos
            local newPos = math.clamp(sliderButton.Position.X.Offset + delta, 0, slider.Size.X.Offset - sliderButton.Size.X.Offset)
            sliderButton.Position = UDim2.new(0, newPos, 0, 0)

            -- C·∫≠p nh·∫≠t thanh tr∆∞·ª£t
            sliderBar.Size = UDim2.new(newPos / slider.Size.X.Offset, 0, 1, 0)
        end
    end)
end

