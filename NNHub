addTab("ðŸŒ Summon")
local tab2Content = Tabs["ðŸŒ Summon"].Content

-- Layout Ä‘áº¹p
local layout = Instance.new("UIListLayout", tab2Content)
layout.Padding = UDim.new(0, 8)
layout.SortOrder = Enum.SortOrder.LayoutOrder

