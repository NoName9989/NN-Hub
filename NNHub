layout.SortOrder = Enum.SortOrder.LayoutOrder

local padding = Instance.new("UIPadding", tab2Content)
padding.PaddingLeft = UDim.new(0, 10)
padding.PaddingRight = UDim.new(0, 10)
padding.PaddingTop = UDim.new(0, 10)
-- Dropdown chọn X
local selectedX = "Standard"
local selectedY = "1"

local xHolder = Instance.new("Frame")
xHolder.Size = UDim2.new(1, 0, 0, 40)
xHolder.Parent = tab2Content
wrapInGlass(xHolder)

local xDropdown = Instance.new("TextButton")
xDropdown.Size = UDim2.new(1, -10, 1, -10)
xDropdown.Position = UDim2.new(0, 5, 0, 5)
xDropdown.Text = selectedX
xDropdown.Parent = xHolder
xDropdown.Font = Enum.Font.Gotham
xDropdown.TextSize = 14
xDropdown.TextColor3 = Color3.fromRGB(30,30,30)
xDropdown.BackgroundTransparency = 1

-- Dropdown xử lý (hiện các lựa chọn)
xDropdown.MouseButton1Click:Connect(function()
	local menu = Instance.new("Frame")
	menu.Size = UDim2.new(1, 0, 0, 70)
	menu.Position = UDim2.new(0, 0, 1, 0)
	menu.BackgroundColor3 = Color3.fromRGB(240, 240, 240)
	menu.BorderSizePixel = 0
	menu.ZIndex = 5
	wrapInGlass(menu)
	menu.Parent = xHolder

	for _, val in ipairs({"Standard", "Centered"}) do
		local btn = Instance.new("TextButton")
		btn.Size = UDim2.new(1, -10, 0, 30)
		btn.Position = UDim2.new(0, 5, 0, 5 + (#menu:GetChildren()-1)*35)
		btn.Text = val
		btn.BackgroundTransparency = 1
		btn.Font = Enum.Font.Gotham
		btn.TextSize = 13
		btn.TextColor3 = Color3.fromRGB(30,30,30)
		btn.Parent = menu
		btn.MouseButton1Click:Connect(function()
			selectedX = val
			xDropdown.Text = val
			menu:Destroy()
		end)
	end
end)

local auto = false

local toggleWrap = Instance.new("Frame")
toggleWrap.Size = UDim2.new(1, 0, 0, 40)
toggleWrap.Parent = tab2Content
wrapInGlass(toggleWrap)

local toggle = Instance.new("TextButton")
toggle.Size = UDim2.new(1, -10, 1, -10)
toggle.Position = UDim2.new(0, 5, 0, 5)
toggle.Text = "Auto Summon: OFF"
toggle.Font = Enum.Font.GothamBold
toggle.TextSize = 14
toggle.BackgroundTransparency = 1
toggle.TextColor3 = Color3.fromRGB(30,30,30)
toggle.Parent = toggleWrap

toggle.MouseButton1Click:Connect(function()
    auto = not auto
    toggle.Text = "Auto Summon: " .. (auto and "ON" or "OFF")
end)

task.spawn(function()
	while true do
		task.wait(1)
		if auto then
			local args = {
				[1] = tostring(selectedX),
				[2] = tostring(selectedY),
				[3] = {}
			}
			game:GetService("ReplicatedStorage").Remote.Server.Gambling.UnitsGacha:FireServer(unpack(args))
		end
	end
end)
    
-- tab 3
addTab("🔰Play")

