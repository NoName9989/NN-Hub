local function createStatFrame(titleText, getValueFunc, yPos)
	local frame = Instance.new("Frame")
	frame.Size = UDim2.new(1, -20, 0, 40)
	frame.Position = UDim2.new(0, 10, 0, yPos)
	frame.BackgroundColor3 = Color3.fromRGB(240, 240, 240)
	frame.BackgroundTransparency = 0
	frame.BorderSizePixel = 0
	frame.Parent = statsContent
	Instance.new("UICorner", frame)

	local label = Instance.new("TextLabel")
	label.Size = UDim2.new(1, -10, 1, 0)
	label.Position = UDim2.new(0, 10, 0, 0)
	label.BackgroundTransparency = 1
	label.Text = titleText .. ": " .. getValueFunc()
	label.Font = Enum.Font.Gotham
	label.TextSize = 16
	label.TextXAlignment = Enum.TextXAlignment.Left
	label.TextColor3 = Color3.fromRGB(50, 50, 50)
	label.Parent = frame

	-- C·∫≠p nh·∫≠t realtime n·∫øu c·∫ßn
	game:GetService("RunService").RenderStepped:Connect(function()
		label.Text = titleText .. ": " .. getValueFunc()
	end)
end

createStatFrame("Th·ªùi gian kh·ªüi ch·∫°y", function()
	local elapsed = math.floor(tick() - startTime)
	local hours = math.floor(elapsed / 3600)
	local minutes = math.floor((elapsed % 3600) / 60)
	local seconds = elapsed % 60
	return string.format("%02d:%02d:%02d", hours, minutes, seconds)
end, 200)

createStatFrame("T√™n ng∆∞·ªùi d√πng", function()
	return game.Players.LocalPlayer.Name
end, 200)

createStatFrame("FPS", function()
	return tostring(math.floor(workspace:GetRealPhysicsFPS()))
end, 50)

createStatFrame("Place ID", function()
	return tostring(game.PlaceId)
end, 100)

createStatFrame("Th·ªùi gian", function()
	return os.date("%H:%M:%S")
end, 250)

