-- Toggle báº±ng RightShift
UserInputService.InputBegan:Connect(function(input, gpe)
    if not gpe and input.KeyCode == OpenKey then
        visible = not visible
        if visible and isMinimized then
            maximize()
        else
            MainFrame.Visible = visible
        end
    end
end)

